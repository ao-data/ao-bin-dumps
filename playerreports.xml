<?xml version="1.0" encoding="utf-8"?>
<playerreports xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="playerreports.xsd">
    <!--make sure the id is unique-->
    <category id="Cheat" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_CHEAT">
        <subcategory id="Hack" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_CHEAT_HACK"/>
        <subcategory id="Bot" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_CHEAT_BOT" botreport="true"/>
        <subcategory id="Exploit" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_CHEAT_EXPLOIT"/>
    </category>
    <category id="ChatOffense" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_CHAT">
        <subcategory id="ChatHateSpeech" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_CHAT_HATE"/>
        <subcategory id="Doxxing" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_CHAT_DOXXING"/>
        <subcategory id="Threats" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_CHAT_THREATS"/>
    </category>
    <category id="OffensiveName" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_NAME">
        <subcategory id="NameHateSpeech" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_NAME_HATE"/>
        <subcategory id="NameOther" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_OTHER"/>
    </category>
    <category id="ArenaOffense" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_ARENA">
        <subcategory id="RoleRefusal" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_ARENA_ROLE"/>
        <subcategory id="AFK" locatag="@REPORT_GUI_DROPDOWN_CATEGORY_ARENA_AFK"/>
    </category>
</playerreports>